 <div class="container">
  <div class="row">
    <div class="col-12 offset-sm-4 col-sm-4">
    <h1>Review <%= @restaurant.name %></h1>

    <%= simple_form_for [@restaurant, @review] do |f| %>
      <%= f.input :content %>
      <%= f.input :rating %>
      <%= f.submit 'Criar Review', class: "btn btn-primary" %>
    <% end %>


    </div>
  </div>
</div>
